<%- include("../partials/header"); %>

<h2 class="mb-4">All Assignments</h2>

<a href="/assignments/new" class="btn btn-success mb-3">Add Assignment</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Course</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    <% assignments.forEach(a => { %>
        <tr>
            <td><%= a.title %></td>
            <td><%= a.courseCode %></td>
            <td><%= a.dueDate.toDateString() %></td>
            <td><%= a.status %></td>
            <td><%= a.priority %></td>
            <td>
                <a href="/assignments/<%= a._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                <a href="/assignments/<%= a._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>

<%- include("../partials/footer"); %>
