<%- include("../partials/header"); %>

<h2 class="mb-4">Add New Assignment</h2>

<form action="/assignments" method="POST" class="card p-4 shadow-sm">

    <label>Title</label>
    <input type="text" name="title" class="form-control mb-3" required>

    <label>Course Code</label>
    <input type="text" name="courseCode" class="form-control mb-3" required>

    <label>Due Date</label>
    <input type="date" name="dueDate" class="form-control mb-3" required>

    <label>Status</label>
    <select name="status" class="form-select mb-3">
        <option>Not Started</option>
        <option>In Progress</option>
        <option>Completed</option>
    </select>

    <label>Priority</label>
    <select name="priority" class="form-select mb-3">
        <option>Low</option>
        <option>Medium</option>
        <option>High</option>
    </select>

    <label>Notes</label>
    <textarea name="notes" class="form-control mb-4"></textarea>

    <button class="btn btn-primary">Save</button>
</form>

<%- include("../partials/footer"); %>
