<%- include("../partials/header"); %>

<h2 class="mb-4 text-danger">Delete Assignment</h2>

<div class="card p-4 shadow-sm">
    <p class="mb-4">Are you sure you want to delete <strong><%= assignment.title %></strong>?</p>

    <form action="/assignments/<%= assignment._id %>/delete" method="POST">
        <button class="btn btn-danger">Delete</button>
        <a href="/assignments" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

